@model IEnumerable<CarSales.Models.Sales>

@{
    ViewData["Title"] = "Index";
}

<h1>Car Sales List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<form asp-controller="Sales" asp-action="Index" method="get">
    <div class="input-group mb-3">
        <input type="text" class="form-control" name="SearchString" placeholder="Search by make">
        <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="submit">Filter</button>
        </div>
    </div>
</form>

<p>
    Sort by Date Listed:
    <a asp-action="SortByDateListed" asp-route-sortOrder="newest" class="btn btn-primary">Newest</a>
    <a asp-action="SortByDateListed" asp-route-sortOrder="oldest" class="btn btn-secondary">Oldest</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Make
            </th>
            <th>
                Model
            </th>
            <th>
                Price
            </th>
            <th>
                Date Listed
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Make)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateListed)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
